<!DOCTYPE html>
<html lang="en">

   <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
@model dynamic

@{
    ViewData["Title"] = "Изменения";
}
        <h2>Изменения</h2>
       <body>
          <form class="form-inline" action="~/Home/Update" method="post"> 
             <label>Измените номер:</label>
             <p><input name="namber" value=@Model.Transport.Namber></p> 

             <label>Измените марку :</label>
             <p><input name="brand" value=@Model.Transport.Brand></p>
             <label>Выберите кол-во топлива:</label>
             <p><input name="fuelQuantity" value=@Model.Transport.FuelQuntity></p>
             <label>Введите тип топлива:</label>
             <select name="fuelType" class="form-control">
                <option value="Электричество">Электричество</option>
                <option value="Бензин">Бензин</option>
                <option value="Дизель">Дизель</option>      
            </select>  
            <input type="text" name="IdGarage" value='@Model.IdGarage' />
            <input type="text" name="IdTransport" value='@Model.Transport.IdTr' />
            <input type="submit" value="выбрать"/>
          </form>
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
       </body>

</html>