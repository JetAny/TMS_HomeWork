<!DOCTYPE html>
<html lang="en">

   <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
@model dynamic

      <body>
            @{
                ViewData["Title"] = "Список машин";
            }
            <h3>Машина</h3>
            <table class="table-condensed">
                <tr>
                    <td>  Id машины</td>
                    <td>&emsp;Марка</td>
                    <td>&emsp;В рейсе</td>
                    <td>&emsp;Номер</td>                
                    <td>&emsp;Вид трансп</td>
                     <td>&emsp;Id гаража</td>
                    <td>&emsp;Кол-во топлива</td>               
                </tr>
                @foreach(var g in Model.Garage)
                    {
                        @foreach (var t in g.transportModel)
                        {
                            <tr>
                                <td>@t.IdTr</td>
                                <td>@t.Brand</td>
                                <td>@t.OnRoad</td>
                                <td>@t.Namber</td>
                                <td>@t.Type.TypeTrans</td>
                                <td>@t.FuelType</td>
                                <td>@t.FuelQuntity</td> 
                                <td>
                                    <form action="~/Home/Сhange" method="post">
                                        <input type="hidden" name="IdGarage" value='@Model.IdGarage' />
                                        <input type="hidden" name="IdTransport" value='@t.IdTr' />
                                        <button type="submit">Изменить</button>
                                    </form>
                                </td>
                            </tr> 
                            
                        }
                    }
            </table>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
       </body>
</html>