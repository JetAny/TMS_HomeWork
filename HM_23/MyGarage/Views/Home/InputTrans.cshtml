<!DOCTYPE html>
<html lang="en">

   <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
@model dynamic

      <body>
        @{
            ViewData["Title"] = "Список машин";
        }
        <h3>Машина</h3>
        <table class="table-condensed">
            <tr>
                <td>  Id машины</td>
                <td>  Номер   </td>
                <td>     Марка  </td>
                <td>    Вид топлива   </td>
                <td>    Кол-во топлива</td>
                 <td>    Id гаража</td>
                  <td>    Id машины</td>
            </tr>
            @foreach (var transport in Model.Transport)
            {
                <tr>
                    <td>@transport.IdTr </td>
                    <td>@transport.namber </td>                   
                    <td>@transport.brand  </td>
                    <td>@transport.fuelType  </td>
                    <td>@transport.fuelQuantity</td>
                    <td> 
                        <form action="~/Home/Сhange" method="post">
                            <input type="text" name="IdGarage" value='@Model.IdGarage' />
                            <input type="text" name="IdTransport" value='@transport.IdTr' />
                            <button type="submit">Изменить</button>
                        </form>
                </tr>
            }
        </table>
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
       </body>
</html>